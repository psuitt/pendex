<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:background="@drawable/selector_change_profile" >
    
    <ImageButton
	    android:id="@+id/navigation_menu_listview_icon"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerVertical="true"
	    android:contentDescription="@string/test" />
    
	<TextView
	    android:id="@+id/navigation_menu_listview_text"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerVertical="true"
	    android:layout_toRightOf="@id/navigation_menu_listview_icon"
	    android:paddingLeft="10dp"
	    android:textColor="@color/menu_item"
        android:textSize="20sp" >

    </TextView>

</RelativeLayout>
